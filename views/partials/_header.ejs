<!--_header.ejs -->
<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success" style="font-family: Arial, sans-serif; font-size: 16px;">
    <a class="navbar-brand font-weight-bold" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if (!username) { %>
          <a class="nav-item nav-link" href="/register">Register</a>
          <a class="nav-item nav-link" href="/login">Login</a>
        <% } else { %>
          <form class="form-inline" method="POST" action="/logout">
            <span style="font-family: Arial, sans-serif; font-weight: bold; font-size: 25px;">Logged in as: <%= username %></span>
            <button class="btn btn-primary" type="submit" style="font-size: 18px; margin-left: 10px;">Logout</button>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>
